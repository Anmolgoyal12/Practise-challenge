#include<stdio.h>
#include<stdlib.h>
int main()
{
    int diff;
    int n,primary=0,secondary=0;
    int i,j;
    scanf("%d",&n);
    int a[n][n];
    for(i=0;i<n;i++)
    {
     for(j=0;j<n;j++)
     {
      scanf("%d",&a[i][j]);
        }}

      for(i=0;i<n;i++)
      {
        primary=primary+a[i][i];
       }
    

    for(i=0;i<n;i++)
    {
    secondary=secondary+a[i][n-i-1];
    }
    diff=primary-secondary;
    diff=abs(diff);
    printf("%d",diff);
    }





